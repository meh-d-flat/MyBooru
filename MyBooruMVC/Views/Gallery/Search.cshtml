@using Microsoft.Extensions.Configuration;
@inject IConfiguration config
@model (string tags, int page, int reverse)
@{
    ViewBag.Title = "Search";
    Layout = "_Layout";
}

<body>
    <style>
        #resultCount {
            color: white;
            margin-top: 20px;
            padding-top: 10px;
        }
    </style>
    <div id="resultCount"></div>
    <p id="smth"></p>
    <center id="pages">

    </center>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: "@config["ApiHost"]/api/media/byTag",
                method: "GET",
                data: {
                    tags: '@Model.tags',
                    page: @Model.page,
                    reverse: @Model.reverse
                },
                success: function (response) {
                    if (response.items.length == 0) {
                        $("#resultCount").text("0 results found")
                        return;
                    }

                    $("#resultCount").text(response.count + " results found");

                    for (var i = 0; i < response.items.length; i++) {
                            $("#smth").append("<a href='/gallery/picture?id=" + response.items[i].hash + "'>" + "<img src='@config["ApiHost"]/" + response.items[i].thumb + "'>" + "</a>");
                    }

                    if (response.prevPage) {
                        var currentPage = @Model.page;
                        var prevPage = @Model.page - 1;
                        $("#pages").append("<a href='/gallery/search?tags=" + '@Model.tags' + "&page=" + prevPage + "&reverse=" + @Model.reverse + "'>Previous</a>")
                    }

                    if (response.nextPage) {
                        var currentPage = @Model.page;
                        var nextPage = @Model.page + 1;
                        $("#pages").append("<a href='/gallery/search?tags=" + '@Model.tags' + "&page=" + prevPage + "&reverse=" + @Model.reverse + "'>Next</a>")
                    }
                }
            })
        });
    </script>
</body>

