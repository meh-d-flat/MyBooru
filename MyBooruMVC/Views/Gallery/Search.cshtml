@using Microsoft.Extensions.Configuration;
@inject IConfiguration config
@model System.String
@*@model System.Int32*@
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!--base is set like this so ajax request gets the right path-->
    <base href="/" />
</head>
<body>
    <ul id="smth"></ul>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: "@config["ApiHost"]/api/media/byTag",
                method: "GET",
                data: {
                    tags: '@Model',
                },
                success: function (response) {
                    if (response.length == 0)
                        return;

                    for (var i = 0; i < response.items.length; i++) {
                            $("#smth").append("<li><a href='/gallery/picture?id=" + response.items[i].hash + "'>" + "<img src='@config["ApiHost"]/" + response.items[i].thumb + "'>" + "</a></li>");
                    }
                }
            })
        });
    </script>
</body>
</html>
