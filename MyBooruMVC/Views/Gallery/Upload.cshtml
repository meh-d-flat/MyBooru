@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Upload</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!--base is set like this so forms get the right path-->
    <base href="/" />
</head>
<body>
    <form action="https://localhost:44321/api/media/upload" method="post" enctype="multipart/form-data">
        <div style="padding-top: 1em">
            <label for="file">Upload File</label>
            <input name="file" type="file" />
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
    </form>
    <form action="https://localhost:44321/api/media/uploadfrom" method="get">
        <div style="margin-top: 10px">
            <label for="source">Url from web</label>
            <input name="source" type="text" />
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
    </form>
</body>
</html>
